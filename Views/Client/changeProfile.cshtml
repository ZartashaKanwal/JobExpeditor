@model Project.Models.applicantInfo
@{
    ViewBag.Title = "changeProfile";
}

@Html.Partial("~/Views/Shared/_headerlayout.cshtml");
<style type="text/css">
    h1 {
        margin: 30px 0;
        padding: 0 200px 15px 0;
        border-bottom: 1px solid #E5E5E5;
    }

    .bs-example {
        margin: 20px;
    }
</style>

@Html.Partial("~/Views/Shared/_pLayout.cshtml");
<div class="col-xs-6">
    <div class="col-xs-12">
        <h1 style="margin-top:110px;font-family:Arial Rounded MT Bold;font:bold;">Update Profile!</h1>

        <form class="form-horizontal" style="font-size:14px;font:bold;" enctype="multipart/form-data" action="/Client/Registered" method="post" name="form" onsubmit="Submit()">
            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName, new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(model => model.DisplayName, new { value = @Model.DisplayName, @class = "form-control form-control" })
                    @Html.ValidationMessageFor(m => m.DisplayName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.email, new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.email, new { value = @Model.email,@class = "form-control " })
                    @Html.ValidationMessageFor(m => m.email)

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.fname, "First Name", new {value = @Model.fname, @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.fname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.fname)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.lname, "Last Name : ", new {value = @Model.lname, @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.lname, new { @class = "form-control form-control" })
                    @Html.ValidationMessageFor(m => m.lname)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.address, "Address : ", new {value = @Model.address, @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.address)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.qualfication, new { @class = "control-label col-xs-3" })
                <div class="col-xs-5">
                    <select class="form-control" name="qualfication">
                        <option value="-1">--Select--</option>
                        if(@Model.qualfication=="Matric")
                        {
                        <option value="Matric" selected>Matric</option>
                        }
                        else
                        {
                             <option value="Matric">Matric</option>
                        }
                        if(@Model.qualfication=="F.A/F.Sc")
                        {
                        <option value="F.A/F.Sc" selected>F.A/F.Sc</option>
                        }
                        else
                        {

                        <option value="F.A/F.Sc">F.A/F.Sc</option>
                        }
                        if(@Model.qualfication=="B.A/B.Sc")
                        {
                        <option value="B.A/B.Sc" selected>B.A/B.Sc</option>
                        }
                        else
                        {

                        <option value="B.A/B.Sc">B.A/B.Sc</option>
                        }
                        if(@Model.qualfication=="M.A/M.Sc/BS(Hons.)")
                        {
                        <option value="M.A/M.Sc/BS(Hons.)" selected>M.A/M.Sc/BS(Hons.)</option>
                        }
                        else
                        {

                        <option value="M.A/M.Sc/BS(Hons.)">M.A/M.Sc/BS(Hons.)</option>
                        }
                        if(@Model.qualfication=="M.phil")
                        {
                        <option value="M.phil" selected>M.phil</option>
                        }
                        else
                        {

                        <option value="M.phil">M.phil</option>
                        }
                        if(@Model.qualfication=="PhD")
                        {
                        <option value="PhD" selected>PhD</option>
                        }
                        else
                        {

                        <option value="PhD">PhD</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.qualfication)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.InterestCat, new { @class = "control-label col-xs-3" })
                <div class="col-xs-5">
                    <select class="form-control" name="InterestCat">
                        <option value="-1">--Select--</option>
                        @foreach (var a in ViewBag.categories)
                        {
                            if (Equals (@a.category1 ,@Model.Category))
                            { 
                                <option value="@a.Id" selected>@a.category1</option>
                            }
                            else
                            {
                                <option value="@a.Id" >@a.category1</option>
                            }
                        }
                    </select>
                    @Html.ValidationMessageFor(m => m.InterestCat)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CV, new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    <input type="file" class="form-control" name="CV" value="@Model.CV" required>
                    @Html.ValidationMessageFor(m => m.CV)
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">

                    <input type="submit" class="btn btn-primary" value="Done!">
                    <input type="reset" class="btn btn-default" value="Reset">
                </div>
            </div>
        </form>
        }
    </div>
 </div>
<div class="col-lg-3"><img src="/Content/images/updateInfo.png" style="float:right;position:fixed;margin-top:180px"></div>