@{
    ViewBag.Title = "Login";
}
@Html.Partial("~/Views/Shared/_headerlayout.cshtml");
<a href="~/Views/Home/Login.cshtml">~/Views/Home/Login.cshtml</a>
<div class="col-lg-4 " style=" margin-top:130px;"><img src="/Content/images/login.jpg" style="margin-top:50px;float:left;position:fixed;"></div>
 <div class=" col-xs-4  text-center" style="margin-top:170px;margin-bottom:170px;margin-left:20px">
     <fieldset style="border-radius:9px">
         <form class="form-horizontal" enctype="multipart/form-data" action="/Home/ValidateLogin" method="post">
             <div class="form-group">

                 <h2 style="margin-left:15px;font-family:Arial Rounded MT Bold;font:bold">Login</h2>

                 <label for="inputEmail" class="control-label col-xs-2" style="font-size:12px">Email</label>
                 <div class="col-xs-10">
                     <input type="email" name="email" class="form-control col-xs-2" id="inputEmail" placeholder="abc@gmail.com" required>
                 </div>
             </div>
             <div class="form-group">
                 <label for="inputPassword" style="font-size:12px" class="control-label col-xs-2">Password</label>
                 <div class="col-xs-10">
                     <input type="password" name="password" class="form-control col-xs-2" id="inputPassword" placeholder="Password" >

                 </div>
             </div>
             <div class="form-group">
                 <div class=" col-xs-12">
                     <button type="submit" class="btn btn-primary">Login</button>
                     <a href="/Home/Index" style="font-size:16px">Register</a>
                 </div>
             </div>
         </form>
         </fieldset>
</div>

